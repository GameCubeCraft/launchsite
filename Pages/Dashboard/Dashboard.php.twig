<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>S-Update-Server - {{ getLangText("dashboard") }}</title>

    <!-- Bootstrap -->
    <link href="{{ getResource('shared', 'css/bootstrap.min.css', true) }}" rel="stylesheet">

    <!-- The S-Update Icon -->
    <link rel="icon" href="{{ getResource('shared', 'icon.png', true) }}" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- About CSS -->
    <link href="{{ getResource('Dashboard', 'css/style.css', true) }}" rel="stylesheet">

    <!-- S-Update-Server global CSS -->
    <link href="{{ getResource('shared', 'css/global.css', true) }}" rel="stylesheet">
</head>

<body>
    <div id="mainDiv">
        <img src="{{ getResource('shared', 'logo.png', true) }}" />
        <br />
        <br />
        <button onclick="window.location.href='{{ getHome() }}';">{{ getLangText('home') }}</button>
        <br />
        <br />

        <hr />

        <div id="dashboard">
            {% for entry in entries %}
                <a href="{{ entry.link }}">
                    <div class="dashboard-entry">
                        <img src="{{ entry.icon }}" /><br />
                        <span>{{ entry.name }}</span>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>

    <!-- The FieldChecker JS -->
    <script src="{{ getResource('Settings', 'js/fieldChecker.js', false)}}"></script>
</body>
</html>
