<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>S-Update-Server - {{ getLangText("settings") }}</title>

    <!-- Bootstrap -->
    <link href="{{ getResource('shared', 'css/bootstrap.min.css', true) }}" rel="stylesheet">

    <!-- The S-Update Icon -->
    <link rel="icon" href="{{ getResource('shared', 'icon.png', true) }}" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- About CSS -->
    <link href="{{ getResource('Settings', 'css/style.css', true) }}" rel="stylesheet">

    <!-- S-Update-Server global CSS -->
    <link href="{{ getResource('shared', 'css/global.css', true) }}" rel="stylesheet">
</head>

<body>
    <div id="mainDiv">
        <img src="{{ getResource('shared', 'logo.png', true) }}" />
        <br />
        <br />
        <button id="home" style="margin-right: 30px;" onclick="window.location.href='{{ getHome() }}';">{{ getLangText('cancel') }}</button>
        <br />
        <br />

        <form method="post" target="" id="passwordForm">
            <input id="form" name="form" value="passwordForm" style="display: none;" />

            <h1>{{ getLangText("change-pass") }}</h1>
            <br />
            <br />

            <label for="password">{{ getLangText("password") }}</label> : <input class="text-field" type="password" name="password" id="password" onkeyup="checkFields(); return false;" required/><br />
            <label for="vpassword">{{ getLangText("validation-password") }}</label> : <input class="text-field" type="vpassword" name="vpassword" id="vpassword" onkeyup="checkFields(); return false;" required/><br /><br />
        </form>
        <button class="submit-button" onclick="checkAndSubmit()" />{{ getLangText("change") }}</button>

        <form method="post" target="">
            <input id="form" name="form" value="langForm" style="display: none;" />

            <h1>{{ getLangText("change-language") }}</h1>
            <br />
            <br />

            <select name="language" id="language" id="langForm">
                <option value="fr_FR">Francais</option>
                <option value="en_US">Anglais</option>
            </select>
            <br />
            <br />
            <br />
            
            <input class="submit-button" type="submit" value="{{ getLangText("change") }}" />
            <br />
            <br />
        </form>
    </div>

    <!-- The FieldChecker JS -->
    <script src="{{ getResource('Settings', 'js/fieldChecker.js', false)}}"></script>
</body>
</html>
